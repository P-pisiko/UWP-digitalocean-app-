<UserControl x:Class="EnesFidanAssignment2.UserControls.Products"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EnesFidanAssignment2.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Style="{StaticResource UserControl_Style}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <!--  Main Content  -->
        <StackPanel
        Grid.Column="1"
        Margin="0,0,0,0"
        Orientation="Vertical"
        Visibility="Visible">
            <Border
            x:Name="EmployeeBorder"
            Grid.ColumnSpan="2"
            Background="#252525"
            BorderBrush="#2F3236"
            BorderThickness="0,0,0,2">
                <Grid Margin="8,0,0,0" HorizontalAlignment="Stretch">
                    <!--  Main Header  -->
                    <Label
                    x:Name="PageHeader"
                    Margin="5,0,5,0"
                    VerticalAlignment="Center"
                    Content="Products"
                    FontSize="25"
                    FontWeight="Bold"
                    Foreground="White" />
                    <!--  Command Buttons  -->
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button
                        Margin="10,10,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        x:Name="AddEmp"
                        Click="AddPro_Click"
                        
                         >
                            <Image Source="\Assests\Images\menu-icon/plus_pink.png"></Image>

                            
                        </Button>
                        <Button
                        Margin="10,9,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        x:Name="EditEmp"
                        Click="EditPro_Click"
                            
                         >
                            <Image Source="\Assests\Images\menu-icon/square.and.pencilpink.png"></Image>
                        </Button>

                        <Button
                        Margin="10,10,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Click="Delete_Product"
                        
                         >
                            <Image Source="\Assests\Images\menu-icon/trash.square.png"></Image>
                        </Button>
                        <Button
                        Margin="10,10,10,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        
                        Click="RefreshProduct_Click"
                        >
                            <Image Source="\Assests\Images\menu-icon/refresh.png"></Image>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <TextBlock
            Margin="20,15,0,0"
            FontFamily="Montserrat"
            FontSize="16"
            FontWeight="Medium"
            Foreground="black"
            Text="Powerful and production-ready, our cloud platform has the solutions that devs like you need to succeed—whether you're building world-changing AI apps, running a side project, or building a business!"
            TextWrapping="Wrap" />

            <!--  Employee name  -->
            <TextBlock
            Margin="20,35,0,0"
            FontSize="16"
            FontWeight="Medium"
            Foreground="black"
            Text="Product Name" />
            <TextBox
            x:Name="product_name"
            Margin="20,10,20,0"
            Background="{StaticResource LightGrayColorBrush}"
            BorderThickness="0,0,0,1"
            FontFamily="{StaticResource MontserratThin}"
            FontSize="18"
            Foreground="White" />

            <!--  Employee name  -->
            <TextBlock
            Margin="20,35,0,0"
            FontSize="16"
            FontWeight="Medium"
            Foreground="black"
            Text="Description" />
            <TextBox
            x:Name="description"
            Margin="20,10,20,0"
            Background="{StaticResource LightGrayColorBrush}"
            BorderThickness="0,0,0,1"
            FontFamily="{StaticResource MontserratThin}"
            FontSize="18"
            Foreground="White" />

            <!--  Number of employees  -->
            <TextBlock
            x:Name="tbNumEmp"
            Margin="20,35,0,0"
            FontFamily="Montserrat"
            FontSize="16"
            FontWeight="Medium"
            Foreground="black"
            Text="Number of Products: 7" />


        </StackPanel>
        <!--  Listing of Employees  -->
        <ListView
        x:Name="LvwEmployees"
        Grid.Column="0"
        Width="Auto"
        Margin="2"
        HorizontalAlignment="Stretch"
        Background="Transparent"
        BorderBrush="Transparent"
        ItemsSource="{Binding ProductList}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border
                    Height="100"
                    Margin="0"
                    HorizontalAlignment="Stretch"
                    Background="Transparent"
                    CornerRadius="4">

                        <!--  Employee Menu Item  -->
                        <Button
                        Margin="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        x:Name="EmpItem"
                        
                        Click="ProItem_Click"
                        CommandParameter="{Binding ProductId}"
                        Style="{StaticResource MenuItemsStyle}">
                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">

                                <Ellipse
                                Width="30"
                                Height="30"
                                Margin="10,0,0,0">
                                    
                                </Ellipse>
                                <StackPanel Margin="10,11,0,0">
                                    <Label Content="{Binding Descriptioon}" Foreground="black" />
                                    <TextBlock  TextWrapping="Wrap"  Text="{Binding Title}" Foreground="black"></TextBlock>
                                </StackPanel>
                            </StackPanel>

                        </Button>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
